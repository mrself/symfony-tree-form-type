{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/*": ["./src/js/*"]
    },
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/js/**/*"]
}